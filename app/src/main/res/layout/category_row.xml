    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:minHeight="48dp"
    app:cardBackgroundColor="@color/new_secondaryLightColor"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
